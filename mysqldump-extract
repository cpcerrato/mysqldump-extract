# Functions 
APP=$(basename $0)

function help_me(){
    echo -e "\n$APP: extract databases and tables from file generated by mysqldump."
    echo -e "Usage: $APP -d -f [-hto]"
    echo -e "   -h      Display this message."
    echo -e "   -d      Database."
    echo -e "   -f      File to extract."
    echo -e "   -t      Table."
    echo -e "   -o      Destination file.\n"
}

help_me
